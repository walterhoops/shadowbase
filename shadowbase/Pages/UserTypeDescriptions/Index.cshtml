@page
@model shadowbase.Pages.UserTypeDescriptions.IndexModel

@{
    ViewData["Title"] = "UserTypes";
}

<h2>UserTypes</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                <th>
                    @Html.DisplayNameFor(model => model.UserTypes[0].TypeID)
                </th>
            </a>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                <th>
                    @Html.DisplayNameFor(model => model.UserTypes[0].TypeDescription)
                </th>
            </a>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
