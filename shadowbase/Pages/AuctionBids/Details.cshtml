@page "{id:int?}"
@model shadowbase.Pages.AuctionBids.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AuctionBidData</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionBidData.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionBidData.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionBidData.BidAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionBidData.BidAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionBidData.BidDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionBidData.BidDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionBidData.UserData)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>User Id</th>
                    
                </tr>
                @foreach (var item in Model.AuctionBidData.UserData)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionBidData.AuctionData)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>BidID</th>
                    
                </tr>
                @foreach (var item in Model.AuctionBidData.AuctionData)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidID)
                        </td>
                        
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AuctionBidData?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
