            <div class="form-group">
                <label asp-for="Auction.AuctionTypeIDFK" class="control-label"></label>
                <select asp-for="Auction.AuctionTypeIDFK" class="form-control" asp-items="ViewBag.AuctionTypeIDFK"></select>
                <span asp-validation-for="Auction.AuctionTypeIDFK" class="text-danger"></span>
