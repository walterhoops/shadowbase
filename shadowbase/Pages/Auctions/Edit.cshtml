                <span asp-validation-for="Auction.UserIDFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction.ClientIDFK" class="control-label"></label>
                <select asp-for="Auction.ClientIDFK" class="form-control" asp-items="ViewBag.ClientIDFK"></select>
                <span asp-validation-for="Auction.ClientIDFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction.AuctionStatusIDFK" class="control-label"></label>
                <select asp-for="Auction.AuctionStatusIDFK" class="form-control" asp-items="ViewBag.AuctionStatusIDFK"></select>
                <span asp-validation-for="Auction.AuctionStatusIDFK" class="text-danger"></span>
