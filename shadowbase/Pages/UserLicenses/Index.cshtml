@page
@model shadowbase.Pages.UserLicenses.IndexModel

@{
    ViewData["Title"] = "LicenseData";
}

<h2>LicenseData</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                <th>
                    @Html.DisplayNameFor(model => model.LicenseData[0].UserID)
                </th>
            </a>
            <th>
                @Html.DisplayNameFor(model => model.LicenseData[0].reLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseData[0].mbLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseData[0].hiLicense)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LicenseData) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mbLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hiLicense)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
