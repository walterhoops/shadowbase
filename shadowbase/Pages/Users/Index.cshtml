<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Type</th>
            <th>Username</th>
            @* <th>Password</th> *@
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            @* <th>Phone</th>
            <th>Email</th>
            <th>Address</th> *@
            <th>City</th>
            @* <th>Postal Code</th>
            <th>Country</th> *@
            <th>Company</th>
            @* <th>Paypal</th> *@
            <th>License</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserData.Users) 
        {
            string selectedRow = "";
            if (item.UserID == Model.UserID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                     @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType.UserTypeDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.PayPalEmail)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseID)
                </td>
                <td>
                    @{
                        foreach (var bid in item.Bids)
                        {
                            @bid.BidID @: @bid.BidDate <br/>
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.UserID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.UserID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@if (Model.UserData.Bids != null)
{
    <h3>Bids Made by Selected User</h3>
    <table class="table">
        <tr>
            <th>BidID</th>
            <th>AuctionID</th>
            <th>Bid Amount</th>
            <th>Bid Date</th>
        </tr>

        @foreach (var item in Model.UserData.Bids)
        {
            string selectedRow = "";
            if (item.BidID == Model.BidID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    <a asp-page="./Index" asp-route-bidID="@item.BidID">Select</a>
                </td>
                <td>
                    @item.BidID
                </td>
                <td>
                    @item.AuctionIDFK
                </td>
                <td>
                    @item.BidAmount
                </td>
                <td>
                    @item.BidDate
                </td>
            </tr>
        }
    </table>
}










